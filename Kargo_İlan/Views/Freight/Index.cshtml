@section Scripts {
    <script>
        (function() {
            const table = document.getElementById('tableView');
            const grid = document.getElementById('gridView');
            const btnTable = document.getElementById('btnTable');
            const btnGrid = document.getElementById('btnGrid');

            function setView(view) {
                if (view === 'grid') {
                    grid.classList.remove('d-none');
                    table.classList.add('d-none');
                    btnGrid.classList.add('active');
                    btnTable.classList.remove('active');
                } else {
                    table.classList.remove('d-none');
                    grid.classList.add('d-none');
                    btnTable.classList.add('active');
                    btnGrid.classList.remove('active');
                }
                try { localStorage.setItem('freightView', view); } catch(e) {}
            }

            btnTable && btnTable.addEventListener('click', () => setView('table'));
            btnGrid && btnGrid.addEventListener('click', () => setView('grid'));

            const saved = (function(){ try { return localStorage.getItem('freightView'); } catch(e) { return null; }})();
            setView(saved ? saved : 'grid');

            // sorting
            const sortSelect = document.getElementById('sortSelect');
            const sortForm = document.getElementById('sortForm');
            sortSelect && sortSelect.addEventListener('change', () => sortForm.submit());

            // reset filters mobile
            const resetBtn = document.getElementById('resetFilters');
            const resetBtnMobile = document.getElementById('resetFiltersMobile');
            function goReset() {
                window.location.href = '@Url.Action("Index", new { page = 1 })';
            }
            resetBtn && resetBtn.addEventListener('click', goReset);
            resetBtnMobile && resetBtnMobile.addEventListener('click', goReset);

            // resolve district IDs to names in chips
            try {
                const districtsScript = document.getElementById('districts-data');
                if (districtsScript) {
                    const data = JSON.parse(districtsScript.textContent || '{}');
                    const idToName = {};
                    Object.keys(data).forEach(k => {
                        (data[k] || []).forEach(d => { idToName[d.Id] = d.Name; });
                    });
                    document.querySelectorAll('.filter-chip[data-chip][data-id] .chip-name')
                        .forEach(span => {
                            const id = span.closest('.filter-chip').getAttribute('data-id');
                            if (id && idToName[id]) span.textContent = idToName[id];
                        });
                }
            } catch(e) { /* noop */ }
        })();
    </script>
    <script id="districts-data" type="application/json">
        @Html.Raw(ViewBag.DistrictsJson)
    </script>

    <script src="~/js/freight//Helpers/filterAlphabetical.js" asp-append-version="true"></script>
    <script src="~/js/freight/filterpersist.js" asp-append-version="true"></script>
  
}
